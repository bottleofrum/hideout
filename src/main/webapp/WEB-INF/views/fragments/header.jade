.navbar.navbar-inverse.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle(data-toggle="collapse", data-target=".nav-collapse")
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#") Demo project
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li.active
                    a(href="#{url.url('/')}") Home
                li
                    a(href="#about") About
                li
                    a(href="#contact") Contact
            ul.nav.navbar-nav.navbar-right
                unless auth.isAuthenticated()
                    li
                        a(href="#{url.url('/signin')}") Sign in
                else
                    li
                        a(href="#", onclick="$('#logoutForm').submit();") Logout
                        form#logoutForm(method="post", style="visibility:hidden", action=url.url('/logout'))
                            input(type="hidden", name=attrs['_csrf'].parameterName, value=attrs['_csrf'].token)
